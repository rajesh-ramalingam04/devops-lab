pipeline {
    agent any
    environment {
        IMAGE_NAME = "python-app-image"
        IMAGE_TAG  = "v1"
        CONTAINER  = "python-app-container"
        EMAIL_RECIPIENT = "rrajesh04@outlook.com"
    }
    stages {
        stage('Build Docker Image') {
            steps {
                sh '''
                    cd python/python-app
                    docker build -t ${IMAGE_NAME}:${IMAGE_TAG} .
                '''
            }
        }
        stage('Stop Old Container') {
            steps {
                sh '''
                    docker stop ${CONTAINER} || true
                    docker rm ${CONTAINER} || true
                '''
            }
        }
        stage('Run Container') {
            steps {
                sh '''
                    docker run -d \
                    --name ${CONTAINER} \
                    -p 5000:5000 \
                    ${IMAGE_NAME}:${IMAGE_TAG}
                '''
            }
        }
        stage('Open App in Chrome') {
            steps {
                sh '''
                    echo "Waiting for app to start..."
                    sleep 3
                    for i in {1..10}; do
                        if curl -f http://localhost:5000/ > /dev/null 2>&1; then
                            echo "✅ App is running at http://localhost:5000/"
                            echo "Opening Chrome..."
                            google-chrome http://localhost:5000/ &
                            sleep 2
                            exit 0
                        fi
                        echo "Attempt $i: Waiting for app to be ready..."
                        sleep 2
                    done
                    echo "❌ App failed to start"
                    exit 1
                '''
            }
        }
    }
    post {
        success {
            echo "✅ Build & Deployment Successful ✅"
            emailext(
                to: "${EMAIL_RECIPIENT}",
                subject: "Jenkins Build SUCCESS: ${JOB_NAME} #${BUILD_NUMBER}",
                body: """
                ✅ Build & Deployment Successful ✅
                Project: ${JOB_NAME}
                Build Number: ${BUILD_NUMBER}
                Build URL: ${BUILD_URL}
                """
            )
        }
        failure {
            echo "❌ Pipeline Failed ❌"
            emailext(
                to: "${EMAIL_RECIPIENT}",
                subject: "Jenkins Build FAILURE: ${JOB_NAME} #${BUILD_NUMBER}",
                body: """
                ❌ Pipeline Failed ❌
                Project: ${JOB_NAME}
                Build Number: ${BUILD_NUMBER}
                Build URL: ${BUILD_URL}
                Check console output for errors..
                """
            )
        }
        always {
            sh 'docker ps -a'
        }
    }
}